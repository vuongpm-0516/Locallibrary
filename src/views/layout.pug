doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title= title
        link(rel="stylesheet", href="/stylesheets/bootstrap.min.css")
        script(src="/javascripts/jquery-3.5.1.slim.min.js")
        script(src="/javascripts/bootstrap.min.js")
        link(rel='stylesheet' href='/stylesheets/style.css')
    body
        div(class='container-fluid')
            div(class='row')
                div(class='col-sm-2')
                    block sidebar
                        ul(class='sidebar-nav')
                            li
                                a(href='/') #{t('sidebar.home')}
                            li
                                a(href='/books') #{t('sidebar.book')}
                            li
                                a(href='/authors') #{t('sidebar.author')}
                            li
                                a(href='/genres') #{t('sidebar.genre')}
                            li
                                a(href='/bookinstances') #{t('sidebar.bookinstance')}
                            li.separator
                            li
                                a(href='/authors/create') #{t('sidebar.create_author')}
                            li
                                a(href='/genres/create') #{t('sidebar.create_genre')}
                            li
                                a(href='/books/create') #{t('sidebar.create_book')}
                            li
                                a(href='/bookinstances/create') #{t('sidebar.create_bookinstance')}
                            li.spacer
                            li
                                a(href='?lng=en') #{t('sidebar.english')} | #[a(href='?lng=vi') #{t('sidebar.vietnamese')}]

                div(class='col-sm-10')
                    block content
