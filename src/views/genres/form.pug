extends ../layout

block content
    h1 #{title}

    form(method='POST')
        div.form-group
            label(for='name') #{t('detail.genre', { ns: 'detail' })}:
            input#name.form-control(
                type='text'
                placeholder='Fantasy, Poetry etc.'
                name='name'
                required
                value=(undefined===genre ? '' : genre.name)
            )
        button.btn.btn-primary(type='submit').mb #{t('submit', { ns: 'form' })}

    if errors
        ul
            for error in errors
                li.mb!= error.msg
