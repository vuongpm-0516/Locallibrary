{
    "name": "express-locallibrary",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "build": "npx ts-node build.ts",
        "start": "node dist/bin/www.js",
        "dev:start": "nodemon --exec ts-node src/bin/www.ts",
        "server:start": "SET DEBUG=express-locallibrary:* & npm run dev:start",
        "watch": "tsc -w",
        "lint": "eslint src/**/*.{ts,tsx}",
        "lint:fix": "eslint --fix src/**/*.{ts,tsx}",
        "format": "prettier --write src/**/*.{ts,tsx}",
        "typeorm": "npx typeorm-ts-node-commonjs",
        "migrate:generate": "npm run typeorm -- migration:generate -d ./src/config/data-source.ts",
        "migrate:run": "npm run typeorm -- migration:run -d ./src/config/data-source.ts",
        "migrate:revert": "npm run typeorm -- migration:revert -d ./src/config/data-source.ts",
        "migrate:show": "npm run typeorm -- migration:show -d ./src/config/data-source.ts"
    },
    "dependencies": {
        "cookie-parser": "~1.4.4",
        "debug": "~2.6.9",
        "dotenv": "^16.4.5",
        "express": "~4.16.1",
        "express-async-handler": "^1.2.0",
        "fs-extra": "^11.2.0",
        "http-errors": "~1.6.3",
        "jet-logger": "^1.3.1",
        "morgan": "~1.9.1",
        "mysql2": "^3.10.2",
        "pug": "2.0.0-beta11",
        "react": "^18.3.1",
        "reflect-metadata": "^0.2.2",
        "typeorm": "^0.3.20"
    },
    "devDependencies": {
        "@eslint/compat": "^1.1.0",
        "@eslint/js": "^9.6.0",
        "@types/cookie-parser": "^1.4.7",
        "@types/debug": "^4.1.12",
        "@types/fs-extra": "^11.0.4",
        "@types/http-errors": "^2.0.4",
        "@types/morgan": "^1.9.9",
        "@types/node": "^20.14.10",
        "@typescript-eslint/eslint-plugin": "^7.16.0",
        "@typescript-eslint/parser": "^7.16.0",
        "eslint": "^9.6.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.1.3",
        "eslint-plugin-react": "^7.34.3",
        "globals": "^15.8.0",
        "nodemon": "^3.1.4",
        "prettier": "^3.3.2",
        "ts-node": "^10.9.2",
        "typescript": "^5.5.3",
        "typescript-eslint": "^7.16.0"
    },
    "description": "Project for learning Node.js Express tutorial.",
    "main": "src/bin/www.ts",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/vuongpm-0516/Locallibrary.git"
    },
    "author": "Pham Minh Vuong",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/vuongpm-0516/Locallibrary/issues"
    },
    "homepage": "https://github.com/vuongpm-0516/Locallibrary#readme"
}
